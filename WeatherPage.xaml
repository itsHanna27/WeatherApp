<Window x:Class="WeatherApplication.WeatherPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Weather App"
        Height="500"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF8C8CCF">
    <Grid>
        <!-- Title (always visible) -->
        <TextBlock Text="Weather App"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontFamily="MV Boli" Width="480" TextAlignment="Center"/>
        <!-- Location (always visible for demo) -->

        <TextBlock x:Name="LocationText"
           Text="Currently in London"
           FontSize="22"
           Foreground="White"
           Margin="0,58,0,0"
           VerticalAlignment="Top"
           FontFamily="MV Boli" Width="500" HorizontalAlignment="Center" TextAlignment="Center"/>

        <Image x:Name="WeatherImage"
               Width="200"
               Height="200"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,87,0,0"
               gif:ImageBehavior.AnimatedSource="Assets/cloudy.gif"
               Visibility="Collapsed"/>

        <TextBlock x:Name="TemperatureText"
                   Text="12°C"
                   FontSize="60"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,254,0,0"
                   VerticalAlignment="Top"
                   FontFamily="MV Boli"
                   Visibility="Collapsed"/>

        <TextBlock x:Name="ConditionText"
                   Text="Cloudy"
                   FontSize="28"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,328,0,0"
                   VerticalAlignment="Top"
                   FontFamily="MV Boli"
                   Visibility="Collapsed"/>

        <StackPanel x:Name="StatsPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="80,380,0,0"
                    VerticalAlignment="Top"
                    Width="350"
                    Height="60"
                    Visibility="Collapsed">

            <StackPanel Width="100" HorizontalAlignment="Center">
                <TextBlock Text="Wind Now" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="WindText" Text="10 km/h" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Width="100" HorizontalAlignment="Center">
                <TextBlock Text="Humidity" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="HumidityText" Text="20%" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Width="100" HorizontalAlignment="Center">
                <TextBlock Text="Precipitation" FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="PrecipitationText" Text="30%" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
